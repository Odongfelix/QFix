<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ServiceRequestActivity"
        android:layout_marginBottom="20dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="Job Detail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/bla_bla"
            android:textSize="19sp" />
        <RelativeLayout
            android:id="@+id/login_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bla_bla"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/email_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/device"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Device Name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@id/phone_icon"
                    />

                <TextView
                    android:id="@+id/phone_icon"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Model" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/location_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/location_icon"
                    />

                <TextView
                    android:id="@+id/location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problem"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/password_icon"
                    android:background="@drawable/black_line_rect" />

                <TextView
                    android:id="@+id/password_icon"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Describe Issue" />
            </RelativeLayout>

        </RelativeLayout>
        <com.qfix.CircularImageView
            android:layout_width="60dp"
            android:layout_below="@id/login_cover"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gray_circle"
            android:layout_marginTop="50dp"
            android:id="@+id/dp"
            android:layout_height="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/name"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/name"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/phone"
                    android:layout_marginStart="20dp"
                    android:layout_below="@+id/dp"
                    android:id="@+id/phone_icon"
                    android:padding="9dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0772660113"
                    android:layout_below="@+id/dp"
                    android:layout_toEndOf="@id/phone_icon"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/location"
                    android:layout_marginStart="20dp"
                    android:layout_below="@+id/dp"
                    android:id="@+id/phone_icon"
                    android:padding="9dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banda near Shell"
                    android:layout_below="@+id/dp"
                    android:layout_toEndOf="@id/phone_icon"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>