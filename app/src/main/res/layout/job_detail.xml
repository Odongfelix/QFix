<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ServiceRequestActivity"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="Job Details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/bla_bla"
            android:textSize="25sp" />
        <RelativeLayout
            android:id="@+id/login_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bla_bla"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/email_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:padding="5dp">

                <TextView
                    android:padding="10dp"
                    android:text="@string/lorem"
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/device"
                    />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:id="@+id/device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Device Name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:padding="5dp">

                <TextView
                    android:padding="10dp"
                    android:layout_toEndOf="@id/phone_icon_"
                    android:id="@+id/model"
                    android:text="@string/lorem"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/phone_icon_"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Model" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/location_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:padding="5dp">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/problem"
                    android:text="@string/lorem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/location_icon"
                    />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problem"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem"
                    android:padding="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/password_icon"
                    android:background="@drawable/black_line_rect" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/password_icon"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Issue Description" />
            </RelativeLayout>

        </RelativeLayout>
        <com.qfix.CircularImageView
            android:layout_width="60dp"
            android:layout_below="@id/login_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/dp"
            android:src="@drawable/outline_account_circle_24"
            android:layout_height="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/phone_"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/phone_"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="9dp"
                    android:src="@drawable/phone"
                    app:tint="?android:textColorSecondary" />

                <TextView
                    android:id="@+id/phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0772660113" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/location"
                    android:padding="9dp"
                    app:tint="?android:textColorSecondary" />
                <TextView
                    android:id="@+id/location"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banda near Shell"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>