<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Quick Fix"
        android:textAlignment="center"
        android:textColor="@color/light_blue"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="The place to schedule appointments with the nearest technician for your home or bussiness appliances"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/quick_fix_button"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="10dp"
        android:text="Get started"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@id/get_started"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/fridge"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fridge" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/fridge"
            android:scaleType="centerCrop"
            android:src="@drawable/phone_jpg" />

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/phone"
            android:scaleType="centerCrop"
            android:src="@drawable/laptop" />

        <ImageView
            android:id="@+id/tv"
            android:layout_above="@id/more"
            android:layout_width="5dp"
            android:layout_height="150dp"
            android:layout_below="@id/laptop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/fridge"
            android:scaleType="centerCrop"
            android:src="@drawable/tv_webp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/fridge"
            android:text="And so much more..."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:autoSizeMinTextSize="1sp" />

    </RelativeLayout>

</RelativeLayout>